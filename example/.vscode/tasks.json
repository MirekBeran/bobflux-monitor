{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
        {
            "taskName": "tslint-watch",
            "args": [],
            "isBuildCommand": true,
            "isWatching": true,
            "showOutput": "always",
            "problemMatcher": [
                "$lessCompile",
                "$tsc",
                "$jshint",
                {
                    "owner": "typescript",
                    "fileLocation": ["relative", "${workspaceRoot}/src/"],
                    "pattern": {
                        "regexp": "^\\[.*(error|warning|info).*[ ]{1,1}([a-zA-Z]+.ts)\\[([0-9]+), ([0-9]+)\\]: (.*)$",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "severity": 1,
                        "message": 5
                    }
                }
            ]
        }
    ]
}